<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="70"
            android:useLevel="false">
            <solid android:color="@color/secondary_violet_200" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="70"
                android:useLevel="true">
                <solid android:color="@color/secondary_purple_500" />
            </shape>
        </rotate>
    </item>
    <item android:bottom="205dp">
        <shape
            android:innerRadiusRatio="1000"
            android:shape="ring"
            android:thickness="1.7dp"
            android:useLevel="false">
            <solid android:color="@color/secondary_purple_500" />
        </shape>
    </item>
    <item>
        <rotate>
            <inset android:insetBottom="205dp">
                <shape
                    android:innerRadiusRatio="1000"
                    android:shape="ring"
                    android:thickness="1.7dp"
                    android:useLevel="false">
                    <solid android:color="@color/secondary_purple_500" />
                </shape>
            </inset>
        </rotate>
    </item>
</layer-list>