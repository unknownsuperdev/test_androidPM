<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/space_14">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/book_picture"
        android:layout_width="@dimen/space_120"
        android:layout_height="@dimen/space_164"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/book_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_book_effect"
        app:layout_constraintBottom_toBottomOf="@id/book_picture"
        app:layout_constraintEnd_toEndOf="@id/book_picture"
        app:layout_constraintStart_toStartOf="@id/book_picture"
        app:layout_constraintTop_toTopOf="@id/book_picture" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sale_txt"
        style="@style/Caption_12_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginEnd="@dimen/space_8"
        android:background="@drawable/bg_sale_container"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/book_picture"
        app:layout_constraintTop_toTopOf="@id/book_picture" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_8"
        android:src="@drawable/ic_add_library"
        app:layout_constraintBottom_toBottomOf="@id/book_picture"
        app:layout_constraintEnd_toEndOf="@id/book_picture" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/genre_category"
        style="@style/Caption_14_Medium_Gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_14"
        android:text="Fantasy, Romance"
        app:layout_constraintEnd_toEndOf="@id/book_effect"
        app:layout_constraintStart_toStartOf="@id/book_effect"
        app:layout_constraintTop_toBottomOf="@id/book_effect" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/Body_SemiBold_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Moon light"
        app:layout_constraintEnd_toEndOf="@id/genre_category"
        app:layout_constraintStart_toStartOf="@id/genre_category"
        app:layout_constraintTop_toBottomOf="@id/genre_category" />

</androidx.constraintlayout.widget.ConstraintLayout>