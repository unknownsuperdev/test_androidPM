<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/black_dark_shape_4px">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/question"
        style="@style/Body_Regular_16_White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_24"
        android:layout_marginVertical="@dimen/space_30"
        android:gravity="start"
        android:text="@string/are_you_sure_to_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/negativeState"
        style="@style/BodyBold_Medium_500_purple600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_34"
        android:layout_marginEnd="@dimen/space_32"
        android:gravity="start"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@id/positiveState"
        app:layout_constraintTop_toBottomOf="@id/question" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/positiveState"
        style="@style/BodyBold_Medium_500_purple600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_36"
        android:gravity="start"
        android:paddingVertical="@dimen/space_34"
        android:text="@string/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question" />

</androidx.constraintlayout.widget.ConstraintLayout>