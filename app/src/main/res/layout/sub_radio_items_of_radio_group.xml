<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Background.gray.90.rectangle.12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selectOrderTitle"
        style="@style/Text.17.400"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:lineHeight="@dimen/space_24"
        android:paddingHorizontal="@dimen/space_12"
        android:text="@string/select_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/orderContainer"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginTop="@dimen/space_12"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/containerChoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectOrderTitle" />


    <RadioGroup
        android:id="@+id/containerChoice"
        android:layout_width="@dimen/space_41"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_14"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/orderContainer"
        app:layout_constraintTop_toBottomOf="@+id/selectOrderTitle"
        app:layout_constraintTop_toTopOf="@id/orderContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>