<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/avatar_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <include layout="@layout/shimmer_avatar_name" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/phone"
        android:layout_width="@dimen/space_32"
        android:layout_height="@dimen/space_32"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_name_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatar_name_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_line_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_12"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_name_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_line_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_8"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_line_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_line_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_8"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_line_2" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="@dimen/space_116"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_24"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_line_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hour"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_24"
        android:layout_marginStart="@dimen/space_28"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/message_line_3" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/participants"
        android:layout_width="@dimen/space_116"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/participants_type_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginStart="@dimen/space_28"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/participants"
        app:layout_constraintTop_toBottomOf="@+id/hour" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/participants_type_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginStart="@dimen/space_28"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/participants"
        app:layout_constraintTop_toBottomOf="@+id/participants_type_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="@dimen/space_116"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintTop_toBottomOf="@id/participants_type_2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginStart="@dimen/space_28"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/participants"
        app:layout_constraintTop_toBottomOf="@+id/participants_type_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginStart="@dimen/space_28"
        android:background="@drawable/shape_gray_rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/participants"
        app:layout_constraintTop_toBottomOf="@+id/price_1" />

</androidx.constraintlayout.widget.ConstraintLayout>