<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageSlide"
        android:layout_width="@dimen/space_200"
        android:layout_height="@dimen/space_272"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialCardView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/book_effect"
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_0"
        android:background="@drawable/ic_book_effect"
        app:layout_constraintBottom_toBottomOf="@id/imageSlide"
        app:layout_constraintEnd_toEndOf="@id/imageSlide"
        app:layout_constraintStart_toStartOf="@id/imageSlide"
        app:layout_constraintTop_toTopOf="@id/imageSlide" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bestseller"
        style="@style/Caption_11_Bold_Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:background="@drawable/finished_progress_bar"
        android:padding="@dimen/space_8"
        app:layout_constraintEnd_toEndOf="@id/imageSlide"
        app:layout_constraintTop_toTopOf="@id/imageSlide"
        android:layout_marginEnd="@dimen/space_8"
        app:layout_goneMarginTop="@dimen/space_8"
        android:text="@string/bestseller_onboarding" />

</androidx.constraintlayout.widget.ConstraintLayout>
