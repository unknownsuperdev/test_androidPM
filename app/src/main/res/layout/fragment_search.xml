<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recent_search"
        style="@style/Headings_h2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_48"
        android:gravity="center"
        android:text="@string/recently_searched"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/clear"
        style="@style/BodyBold"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_48"
        android:layout_marginEnd="@dimen/space_16"
        android:gravity="center"
        android:text="@string/clear"
        android:textAllCaps="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/search_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/recent_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recent_search"
        tools:listitem="@layout/item_search_with_name" />

    <LinearLayout
        android:id="@+id/no_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_result"
            style="@style/Headings_h2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_48"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_results" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/try_new_search"
            style="@style/Regular_14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_48"
            android:gravity="center"
            android:text="@string/try_a_new_search" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

