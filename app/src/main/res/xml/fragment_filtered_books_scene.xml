<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/customSnackBar"
            style="@style/Body_SemiBold_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_48"
            android:background="@drawable/bg_save_library"
            android:drawableStart="@drawable/ic_done"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:minHeight="@dimen/space_16"
            android:padding="@dimen/space_12"
            android:text="@string/_was_downloaded"
            android:translationZ="@dimen/space_4"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/mainToolbar"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/selectedTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            motion:layout_constraintTop_toBottomOf="@id/mainToolbar">
        </Constraint>

        <Constraint
            android:id="@+id/booksInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:paddingBottom="@dimen/space_96"
            motion:layout_constraintTop_toBottomOf="@id/selectedTags" />

        <Constraint
            android:id="@+id/applyBtn"
            style="@style/Title_SemiBold_18_Btn"
            android:layout_width="@dimen/space_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_8"
            android:background="@drawable/main_button"
            android:text="@string/apply"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/noResultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/loadingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:visibilityMode="ignore" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/customSnackBar"
            style="@style/Body_SemiBold_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_48"
            android:background="@drawable/bg_save_library"
            android:drawableStart="@drawable/ic_done"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:minHeight="@dimen/space_16"
            android:padding="@dimen/space_12"
            android:text="@string/_was_downloaded"
            android:translationZ="@dimen/space_4"
            motion:layout_constraintTop_toBottomOf="@id/mainToolbar"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/applyBtn"
            style="@style/Title_SemiBold_18_Btn"
            android:layout_width="@dimen/space_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_8"
            android:background="@drawable/main_button"
            android:text="@string/apply"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/customSnackBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_16"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/selectedTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            motion:layout_constraintBottom_toTopOf="parent">
        </Constraint>

        <Constraint
            android:id="@+id/booksInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:paddingBottom="@dimen/space_96"
            motion:layout_constraintTop_toBottomOf="@id/mainToolbar" />

        <Constraint
            android:id="@+id/noResultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/loadingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:visibilityMode="ignore" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">
        <OnSwipe
            motion:onTouchUp="stop"
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/booksInfoView" />
    </Transition>
</MotionScene>
